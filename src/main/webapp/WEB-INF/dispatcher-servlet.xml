<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

<!-- Configuer HandlerMapping classes -->

<bean id="suhm" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
<property name="mappings">
<props>
<prop key="welcome.htm" >shc</prop>
<prop key="wish.htm">wmg</prop>
<prop key="about.htm">about</prop>
<prop key="contact.htm">contact</prop>
</props>
</property>
</bean>

<!-- configure HandlerClasses/Controller -->
<bean id="shc" class="com.srb.controller.ShowHomeController"/>
<bean id="wmg" class="com.srb.controller.WishMessagController"/>
<bean id="about" class="com.srb.controller.AboutController"/>
<bean id="contact" class="com.srb.controller.ContactController"/>

<!-- Configure ViewResolver Classe -->

<bean id="irvr"  class="org.springframework.web.servlet.view.InternalResourceViewResolver">
<property name="prefix" value="/WEB-INF/pages/"></property>
<property name="suffix" value=".jsp"></property>
</bean>


</beans>
